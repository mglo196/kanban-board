{
  "extends": "../tsconfig.json",           // Extend the base tsconfig for shared settings
  "compilerOptions": {
    "rootDir": "src",                      // Specify the root directory for your source files
    "outDir": "dist",                      // Specify the output directory for compiled files
    "noEmitOnError": true                  // Don't emit files if there are TypeScript errors
  },
  "include": ["src"],                      // Include only the src directory
  "exclude": ["node_modules", "dist"],     // Exclude node_modules and dist directories
  "typeRoots": ["./node_modules/@types", "./src/types"] // Add custom types from src/types folder
}